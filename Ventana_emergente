        """ Esta funcion te permite crear una ventana emergente sin destruir la ventana principal"""
        def abrir_ventana(): 
            win=tk.Toplevel() #Ubicacion de la ventana
            wwin, hwin = 400, 300 #Tamaño de la ventana
            px = round(self.win.winfo_screenwidth()/2-wwin/2) # posición x
            py = round(self.win.winfo_screenheight()/2-hwin/2) # posición y
            win.geometry(str(wwin)+"x"+str(hwin)+"+"+str(px)+"+"+str(py))
            win.configure(background="#f7f9fd") #Fondo de la ventana emergente
            win.title ("Elija la opcion que desea realizar")#Titulo de la ventana emergente
            boton_cancelar = tk.Button(win, text = "Cancelar", command= win.destroy)#El boton cancelar destruye la ventana emergente, regresandote a la ventana original
            boton_cancelar.pack(side=tk.TOP)    #Ubicacion del boton
            boton_eliminar = tk.Button(win, text= "Eliminar curso", )   #Boton eliminar, aun en proceso
            boton_eliminar.pack()
            boton_guardar = tk.Button(win, text= "Inscribir curso", )   #Boton guardar, aun en proceso
            boton_guardar.pack()
        abrir_ventana()
